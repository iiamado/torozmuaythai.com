<div class="contact-form">
  <form
    netlify
    netlify-honeypot
    name="contact"
    method="POST"
    action="/success">
    <p class="hidden">
      <label>
        Dont fill this out if youre human: <input name="bot-field" />
      </label>
    </p>
    <input type="hidden" name="form-name" value="contact" />
    <label for="name">Name</label>
    <input id="name" type="text" name="name" />
    <label for="email">Email</label>
    <input id="email" type="email" name="email" required />
    <label for="contact">Ask any questions you'd like answered below:</label>
    <textarea id="contact" wrap="soft" name="contact" required></textarea>
    <button type="submit"><strong>SUBMIT</strong></button>
  </form>
</div>

<style>
.contact-form {
  margin: 40px 40px;
  min-width: 250px;
  width: 45%;
}
input, textarea, button {
  background-color: whitesmoke;
  border: 0;
  font-size: inherit;
  margin: 15px 0;
  padding: 12px 20px;
  width: 100%;
}
button {
  background-color: rgb(255, 229, 83);
  border: 2px solid black;
  color: black;
  width: 50%;
}
.hidden {
  clip: rect(0 0 0 0);
  clip-path: inset(50%);
  height: 1px;
  overflow: hidden;
  position: absolute;
  white-space: nowrap;
  width: 1px;
}
</style>